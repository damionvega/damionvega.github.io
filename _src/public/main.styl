body
  font-family helvetica, sans-serif
  padding 50px 20px 0
  background floralwhite
  color #444
  margin 0

h1
  font-size 3rem
  line-height 1.2em

h2
  font-size 2rem

h3
  font-size 2rem


@font-face
  font-family 'djv'
  src: url('_fonts/djv.eot?20y4ym')
  src: url('_fonts/djv.eot?#iefix20y4ym') format('embedded-opentype'),
       url('_fonts/djv.woff?20y4ym') format('woff'),
       url('_fonts/djv.ttf?20y4ym') format('truetype'),
       url('_fonts/djv.svg?20y4ym#djv') format('svg')
  font-weight normal
  font-style normal

.djv-thumbs-up:before
  content '\e602'

.djv-thumbs-down:before
  content '\e603'


#confirmBg
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 13
  display none
  width 100%
  background url(images/1blur.jpg) 60% 100% no-repeat
  background-size cover

#confirmBox
  position fixed
  top 10rem
  z-index 13
  display none
  width 100%
  border 1px solid transparent

  .banner
    background url(images/warning.jpg)
    height 2rem
    width 100%
    border-radius 3px 3px 0 0

  .disclaimer
    background rgba(250,250,255,.15)
    padding 2rem
    font-size 1.2rem
    color ivory

  i
    margin 0 .5rem 0 0
    font-size 1.2rem

  button
    width 50%
    float left
    border 1px solid white
    background white
    font-size 1.2rem
    font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
    padding .5rem 0
    outline none
    appearance none

  .no
    background #FFCCCC
    &:hover
      background #FF2828
      color white

  .yes
    background #DBFCCF
    &:hover
      background #3DBA10
      color white



@media screen and (min-width:60em)
  #confirmBg
    background-position 0 100%

  #confirmBox
    border-radius 3px 3px 0 0

@media screen and (min-width:40em)
  #confirmBox
    left 25%
    width 50%

.conceal
  opacity 0
  width 0
  height 0
  transition width 0s 1s, height 0s 1s, opacity 1.4s

