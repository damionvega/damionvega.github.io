@import '_variables'


//
// Reset
//

*,
*:after,
*:before
  box-sizing border-box

::selection
  color ivory
  background lighten(lightblue, 20%)

html,
body
  margin 0
  padding 0

body
  margin 0
  padding 0
  background lighten(floralwhite, 50%)
  color $color-main
  font-family 'baskerville-urw', georgia, sans-serif

h1,
h2,
h3,
h4,
h5,
h6
  font-family 'essonnes-display', sans-serif
  color $color-light
  font-weight 800

h1
  margin 3rem 0 1.75rem
  font-size 3rem
  line-height 1

h2
  margin 1.6rem 0
  font-size 2.5rem
  line-height 1

h3
  margin 1.5rem 0
  font-size 2.25rem
  line-height 1

h4
  margin 1rem 0
  font-size 2rem
  line-height 1

h5
  margin 1rem 0
  font-size 1.9rem
  line-height 1

h6
  margin 1rem 0
  font-size 1.5rem
  line-height 1

a
  text-decoration none
  &:visited
    color blue

p,
a
  line-height 1.75

a,
p,
ul,
ol,
li,
table,
dh,
dr,
dt
  font-size 1.2rem

ul li
  list-style-type none

blockquote
  color #555
  margin 3rem auto
  padding-left 3rem
  border-left 3px solid #DDD
  border-radius .5rem



//
// Mixins
//

border-radius(radius = 3px)
  radius = arguments if length(arguments) > 1
  border-radius radius

position(position = static, top = auto, right = auto, bottom = auto, left = auto)
  position position
  top top
  right right
  bottom bottom
  left left

wh(w, h = w)
  width w
  height h

clearfix()
  clear both
  &
    zoom 1
  &:before,
  &:after
    content ''
    display table
  &:after
    clear both

black()
  rgba(0, 0, 0, arguments)

white()
  rgba(255, 255, 255, arguments)



